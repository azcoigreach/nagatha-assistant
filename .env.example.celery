# Nagatha Assistant - Celery Configuration
# Copy this file to .env and modify the values as needed

# Celery broker and result backend (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Legacy Redis URL (for compatibility)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=60

# Database Configuration
DATABASE_URL=sqlite:///./nagatha.db

# Logging Configuration
LOG_LEVEL=INFO

# Context Memory Configuration
CONTEXT_MEMORY_MESSAGES=50

# Discord Bot Configuration (optional)
DISCORD_TOKEN=your_discord_token_here
DISCORD_GUILD_ID=your_guild_id_here

# Django Settings (for web dashboard)
DJANGO_SETTINGS_MODULE=web_dashboard.settings.production
SECRET_KEY=your_django_secret_key_here

# Additional Celery Settings
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600