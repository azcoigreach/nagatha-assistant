 # Environment variables for Nagatha Assistant
 # Copy this to .env and set your own values.

OPENAI_API_KEY=your_openai_api_key_here
LOG_LEVEL=DEBUG
LOG_FILE=nagatha.log
DATABASE_URL=sqlite:///nagatha.db
CONTEXT_MEMORY_MESSAGES=20
OPENAI_MODEL=gpt-4.1-mini
NAGATHA_USAGE_FILE=nagatha_usage.json
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
MASTODON_CLIENT_ID=your_client_id_here
MASTODON_CLIENT_SECRET=your_client_secret_here
MASTODON_ACCESS_TOKEN=your_access_token_here
MASTODON_API_BASE_URL=https://mastodon.example.com