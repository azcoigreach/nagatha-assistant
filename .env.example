# Environment variables for Nagatha Assistant Dashboard
# Copy this to .env and set your own values.

# Django Configuration
DEBUG=True
DJANGO_ENV=development
DJANGO_SECRET_KEY=your-secret-key-change-in-production-1234567890abcdef
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web,nginx,*

# Database Configuration
DB_NAME=nagatha_dashboard
DB_USER=nagatha
DB_PASSWORD=nagatha_password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Nagatha Configuration
NAGATHA_DATABASE_URL=sqlite:///nagatha.db
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Original Nagatha Assistant Configuration
CONTEXT_MEMORY_MESSAGES=20
OPENAI_MODEL=gpt-4.1-mini
NAGATHA_USAGE_FILE=nagatha_usage.json
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
MASTODON_CLIENT_ID=your_client_id_here
MASTODON_CLIENT_SECRET=your_client_secret_here
MASTODON_ACCESS_TOKEN=your_access_token_here
MASTODON_API_BASE_URL=https://mastodon.example.com

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
