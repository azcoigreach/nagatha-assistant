 # Environment variables for Nagatha Assistant
# Copy this to .env and set your own values.

OPENAI_API_KEY=your_openai_api_key_here
LOG_LEVEL=DEBUG
LOG_FILE=nagatha.log

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///nagatha.db
# For PostgreSQL with Docker Compose
# DATABASE_URL=postgresql://nagatha_user:nagatha_password@localhost:5432/nagatha

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Docker Compose Database Credentials
POSTGRES_DB=nagatha
POSTGRES_USER=nagatha_user
POSTGRES_PASSWORD=nagatha_password
POSTGRES_PORT=5432
REDIS_PORT=6379

CONTEXT_MEMORY_MESSAGES=20
OPENAI_MODEL=gpt-4.1-mini
NAGATHA_USAGE_FILE=nagatha_usage.json
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
MASTODON_CLIENT_ID=your_client_id_here
MASTODON_CLIENT_SECRET=your_client_secret_here
MASTODON_ACCESS_TOKEN=your_access_token_here
MASTODON_API_BASE_URL=https://mastodon.example.com

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_COMMAND_PREFIX=!